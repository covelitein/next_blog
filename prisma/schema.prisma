generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  content String
  date    DateTime @db.Date
  img     String
  title   String
  userId  String   @db.ObjectId
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  img   String
  name  String
}
